<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sort_hostname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HostName"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/sort_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sort_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ascending"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/sort_hostname"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/sort_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descending"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/sort_asc"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            app:layout_constraintTop_toBottomOf="@id/sort_dsc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>